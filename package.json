{
  "name": "pc-buddy",
  "version": "0.2.2",
  "description": "PC Buddy - Your Desktop Assistant",
  "author": "Sean McKeen",
  "license": "MIT",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish always",
    "build-admin": "node scripts/build-admin.js"
  },
  "build": {
    "appId": "com.smckeen.pcbuddy",
    "productName": "PC Buddy",
    "files": [
      {
        "from": "src",
        "to": "src",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      "package.json"
    ],
    "asar": true,
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets",
        "filter": [
          "**/*.ps1"
        ]
      }
    ],
    "asarUnpack": [
      "**/assets/*.ps1"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/images/logo.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "SeanMcKeen",
      "repo": "PC-Buddy",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "sudo-prompt": "^9.2.1"
  }
}
